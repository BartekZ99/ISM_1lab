<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_przedmioty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/wiersz_listy"
        tools:visibility="visible">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/button_oblicz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="obliczSrednia"
        android:text="@string/przycisk_oblicz"
        app:layout_constraintTop_toBottomOf="@+id/recycler_przedmioty" />
</androidx.constraintlayout.widget.ConstraintLayout>